    script(src="/components/jquery/jquery.min.js")  
    script(src="/components/bootstrap-assets/js/alert.js")  
    
    script(type='text/javascript').
      $(function() { 
        $('.checkbox-fake').click(function(){
            var _this = $(this),
                _parent = _this.parent(),
                _checkbox = _parent.find('input[type="checkbox"]');
            
            _parent.find('.input-checkbox').toggleClass('input-checkbox-checked');
            _checkbox.attr("checked", !_checkbox.attr("checked"));
        });
        $('.generate').click(function(){
            $('.loading').show();
        });
      })

